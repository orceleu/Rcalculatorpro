<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".URIP">


    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        android:text="laisser deux champs vide pour calculer leurs valeurs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/voltage"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:hint="Enter value of U"
                android:inputType="numberDecimal"
                android:maxLength="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Volts"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/resistance"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:hint="Enter value of R"
                android:inputType="numberDecimal"
                android:maxLength="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Ohms"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/current"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:hint="Enter value of I"
                android:inputType="numberDecimal"
                android:maxLength="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Amps"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/wattage"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:hint="Enter value of W"
                android:inputType="numberDecimal"
                android:maxLength="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Watts"
                android:textColor="@color/black" />

        </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="10dp"
         android:layout_marginTop="10dp"
         android:layout_marginEnd="10dp"
         android:orientation="horizontal">

         <Button
             android:id="@+id/computeURIP"
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:layout_weight="1"
             android:text="compute" />
  <Button
            android:id="@+id/ClearURIP"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="2"
            android:layout_height="48dp"
            android:text="CLEAR" />
     </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
            android:layout_marginBottom="125dp"
            android:src="@drawable/formule1"
           />
    </LinearLayout>

</FrameLayout>